<div class="container">
<h1>List of All Users</h1>
  <% @users.each do |user| %>
    <img src="<%= user.photo %>" alt="User" class="picture" />
    <%= link_to user_path(user) do %>
      <div class="usercontainer">
        <li class="user">
          <%= user.name %>
        </li>
        <span class="counter"> Number of Posts: <%= user.post_counter %> </span>
      </div>
    <% end %>
    
  <% end %>
  
 
</div>
